pipeline {
    agent any
    tools {
        maven 'Maven 3.9.11'
        jdk 'JDK_17'
    }
    environment {
        SONAR_SCANNER_OPTS = "-Xmx512m"
    }
    stages {
        stage('Build and Test') {
            steps {
                sh './mvn clean install'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('MySonarQubeServer') {
                    sh './mvn sonar:sonar -Dsonar.projectKey=bookservice -Dsonar.login=your_token'
                }
            }
        }
    }
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}